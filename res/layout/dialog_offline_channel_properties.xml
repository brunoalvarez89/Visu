<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:descendantFocusability="beforeDescendants"
	android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textViewOfflineStudyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nombre del Estudio" />

    <EditText
        android:id="@+id/editTextOfflineStudyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewOfflinePatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nombre del Paciente" />

            <EditText
                android:id="@+id/editTextOfflinePatientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewOfflineStudyType	"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tipo de Estudio" />

            <EditText
                android:id="@+id/editTextOfflineStudyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textViewOfflineBits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Resolución (Bits)" />

            <EditText
                android:id="@+id/editTextOfflineBits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" 
                android:inputType="number">
            </EditText>

            <TextView
                android:id="@+id/textViewOfflineVMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Voltaje Mínimo (V)" />

            <EditText
                android:id="@+id/editTextOfflineVMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </EditText>

            <TextView
                android:id="@+id/textViewOfflineAMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Valor Mínimo" />

            <EditText
                android:id="@+id/editTextOfflineAMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="1">

            <TextView
                android:id="@+id/textViewOfflinePatientSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Apellido del Paciente" />

            <EditText
                android:id="@+id/editTextOfflinePatientSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewOfflineAcquisitionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tiempo de adquisición" />

            <EditText
                android:id="@+id/editTextOfflineAcquisitionTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewSensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Sensor Adquisidor" />

            <EditText
                android:id="@+id/editTextSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:inputType="number">
            </EditText>

            <TextView
                android:id="@+id/textViewOfflineVMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Voltaje Máximo (V)" />

            <EditText
                android:id="@+id/editTextOfflineVMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </EditText>

            <TextView
                android:id="@+id/textViewOfflineAMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Valor Máximo" />

            <EditText
                android:id="@+id/editTextOfflineAMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>